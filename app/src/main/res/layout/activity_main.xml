<?xml version="1.0" encoding="UTF-8"?>
    <android.support.constraint.ConstraintLayout
        tools:context=".view.MainActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/container"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <View
            android:id="@+id/bar2"
            android:layout_width="355sp"
            android:layout_height="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/engineer_counter" />

        <TextView
        android:id="@+id/pilot_counter"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
            android:fontFamily="@font/pixeled"
            android:text="PIlot: 0"
            android:textAlignment="viewStart"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_credits" />

    <TextView
        android:id="@+id/fighter_counter"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pixeled"
        android:text="Fighter: 0"
        android:textAlignment="viewStart"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilot_counter" />

    <TextView
        android:id="@+id/trader_counter"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pixeled"
        android:text="Trader: 0"
        android:textAlignment="viewStart"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fighter_counter" />

    <TextView
        android:id="@+id/engineer_counter"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pixeled"
        android:text="Engineer: 0"
        android:textAlignment="viewStart"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trader_counter" />

    <TextView
        android:id="@+id/techlvl_counter"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pixeled"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/text_techlevel_title"
        app:layout_constraintTop_toBottomOf="@+id/text_location_title" />

    <TextView
        android:id="@+id/text_commander_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pixeled"
        android:text="Commander Name"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_credits"
        android:layout_width="135dp"
        android:layout_height="29dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pixeled"
        android:text="Credits: 0"
        android:textAlignment="viewStart"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_commander_name" />

    <ImageView
        android:id="@+id/ship_image"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ship_type"
        app:srcCompat="@drawable/gnat" />

    <TextView
        android:id="@+id/text_ship_type"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/pixeled"
        android:text="Ship: name"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_weapon_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/pixeled"
        android:text="Weapon LVL:"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cargo_amount" />

    <TextView
        android:id="@+id/text_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        android:fontFamily="@font/pixeled"
        android:text="Current Location: "
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/planet_image"
        android:layout_width="161dp"
        android:layout_height="128dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ship_image"
        tools:srcCompat="@drawable/planet_1" />

    <TextView
        android:id="@+id/text_techlevel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/pixeled"
        android:text="Tech Level: "
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_title" />

    <TextView
        android:id="@+id/text_government_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/pixeled"
        android:text="Government:"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_techlevel_title" />

    <TextView
        android:id="@+id/text_resourcetype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/pixeled"
        android:text="Resource Type:"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_government_title" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/text_cargo_amount"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/pixeled"
        android:text="Cargo: 0 / 15"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ship_image" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="148dp"
        android:fontFamily="@font/pixeled"
        android:text="Location"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_weapon_title" />

    <TextView
        android:id="@+id/resource_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/pixeled"
        android:text="placeholder"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/inventory_button"
        app:layout_constraintStart_toEndOf="@+id/text_resourcetype_title" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/pixeled"
        android:text="placeholder"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/text_government_title"
        app:layout_constraintTop_toBottomOf="@+id/text_location_title" />

    <Button
        android:id="@+id/travel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="TRAVEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClickTravel"/>

    <Button
        android:id="@+id/inventory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="16dp"
        android:text="INVENTORY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trading_button"
        app:layout_constraintStart_toEndOf="@+id/travel_button"
        android:onClick="onClickInventory"/>

    <Button
        android:id="@+id/trading_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="TRADING"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onClickTrading"/>

</android.support.constraint.ConstraintLayout>