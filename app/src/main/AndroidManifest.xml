<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spacetrader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.CreatePlayerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.InventoryActivity"
            android:label="Inventory" />
        <activity
            android:name=".view.TravelActivity"
            android:label="Travel" />
        <activity
            android:name=".view.TradingActivity"
            android:label="Trading" />
        <activity
            android:name=".view.PlanetInfoActivity"
            android:label="Planet Information" />
        <activity
            android:name=".view.ShipUpgradeActivity"
            android:label="Manage Ship" />
        <activity
            android:name=".view.EncounterActivity"
            android:label="Travel" />
    </application>

</manifest>